# ========================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ========================================
DATABASE_URL="postgresql://username:password@localhost:5432/suaza_db"

# ========================================
# CONFIGURACIÓN JWT
# ========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@suaza.com

# ========================================
# CONFIGURACIÓN DE WHATSAPP (Twilio)
# ========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# CONFIGURACIÓN DIAN
# ========================================
DIAN_API_URL=https://api.dian.gov.co
DIAN_API_KEY=your-dian-api-key
DIAN_CERT_PATH=/path/to/your/certificate.p12
DIAN_CERT_PASSWORD=your-cert-password

# ========================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true 